<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@drawable/onboardingmanagement"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/denumireJobTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Denumire Job"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/img1"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/numeCompanieTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nume Companie"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/img1"
            android:layout_below="@+id/denumireJobTxt"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/orasTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Oras"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/img1"
            android:layout_below="@+id/numeCompanieTxt"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tipJobTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tip job"
            android:textSize="25sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/img1"
            android:layout_below="@+id/orasTxt"
            android:layout_marginLeft="10dp"/>


        <Button
            android:id="@+id/viewCVBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tipJobTxt"
            android:text="Delete" />



    </RelativeLayout>

</androidx.cardview.widget.CardView>