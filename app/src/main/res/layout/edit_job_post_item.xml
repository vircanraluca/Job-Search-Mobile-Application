<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

    <TextView
        android:id="@+id/denumireJobTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Denumire Job"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/numeCompanieTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nume Companie"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_below="@+id/denumireJobTxt"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/orasTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Oras"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_below="@+id/numeCompanieTxt"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/tipJobTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tip job"
        android:textSize="25sp"
        android:textColor="#000"
        android:layout_below="@+id/orasTxt"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/tipJobTxt"
        android:gravity="end">

        <Button
            android:id="@+id/editBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/brandColorSecondary"
            android:text="EDIT" />

        <Button
            android:id="@+id/viewCVBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/brandColorSecondary"
            android:text="DELETE" />

    </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>